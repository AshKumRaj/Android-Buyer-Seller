<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashish.loginregister.MainActivity">



    <Button
        android:id="@+id/bSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELLER"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/bBuyer"
        android:layout_alignStart="@+id/bBuyer"
        android:layout_marginTop="65dp" />

    <Button
        android:id="@+id/bBuyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUYER"
        android:layout_below="@+id/bSeller"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="87dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:text="PROCEED AS A : " />

</RelativeLayout>
